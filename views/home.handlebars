<div class="col-md-6 mx-auto text-center mt-5">
    <div class="header-title">
        <h2 class="wv-heading--subtitle">
            Agregar un producto
        </h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4 mx-auto">
        <div class="myform form ">
            <form action="/api/productos" method="post" name="productos">
                <div class="form-group">
                    <input type="text" name="title" class="form-control my-input" id="title" placeholder="Nombre" required>
                </div>
                <div class="form-group">
                    <input type="text" name="price" class="form-control my-input" id="price" placeholder="Precio" required>
                </div>
                <div class="form-group">
                    <select class="form-control b-select" name="thumbnail" required>
                        <option value="" disabled selected>Selecciona una fruta</option>
                        <option value="anana">ananá</option>
                        <option value="banana">banana</option>
                        <option value="cereza">cereza</option>
                        <option value="durazno">durazno</option>
                        <option value="frutilla">frutilla</option>
                        <option value="manzana">manzana</option>
                        <option value="naranja">naranja</option>
                        <option value="pera">pera</option>
                        <option value="sandia">sandía</option>
                        <option value="uva">uva</option>
                    </select>
                </div>
                <div class="text-center ">
                    <button type="submit" class=" btn btn-block send-button tx-tfm">Agregar producto</button>
                </div>
                <div class="col-md-12 ">
                    <div class="login-or">
                        <hr class="hr-or">
                    </div>
                </div>
                <p class="small mt-3">Para ver el listado de productos hacer <a href="/productos/vista"
                        class="ps-hero__content__link">click aquí</a>
                </p>
            </form>
        </div>
    </div>
</div>